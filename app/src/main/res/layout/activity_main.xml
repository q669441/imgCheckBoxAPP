<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="選擇你所喜愛的科目"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="124dp"
        android:layout_height="88dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/數學"
        tools:layout_editor_absoluteX="37dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="146dp"
        android:layout_height="81dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/自然" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="116dp"
        android:layout_height="101dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/國文" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="121dp"
        android:layout_height="97dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@drawable/英文" />

    <CheckBox
        android:id="@+id/chkmath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="數學"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="155dp" />

    <CheckBox
        android:id="@+id/chksince"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自然"
        tools:layout_editor_absoluteX="218dp"
        tools:layout_editor_absoluteY="148dp" />

    <CheckBox
        android:id="@+id/chkchinese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="國文"
        app:layout_constraintStart_toStartOf="@+id/chkmath"
        tools:layout_editor_absoluteY="288dp" />

    <CheckBox
        android:id="@+id/chkenglish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="英文"
        app:layout_constraintStart_toStartOf="@+id/chksince"
        tools:layout_editor_absoluteY="285dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnOK"
        android:text="送出"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="355dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="我喜歡的有"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="414dp" />

    <ImageView
        android:id="@+id/imgmath"
        android:layout_width="93dp"
        android:layout_height="93dp"
        app:srcCompat="@drawable/數學"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="637dp" />

    <ImageView
        android:id="@+id/imgsince"
        android:layout_width="104dp"
        android:layout_height="98dp"
        app:srcCompat="@drawable/自然"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="637dp" />

    <ImageView
        android:id="@+id/imgchinese"
        android:layout_width="101dp"
        android:layout_height="94dp"
        app:srcCompat="@drawable/國文"
        tools:layout_editor_absoluteX="205dp"
        tools:layout_editor_absoluteY="637dp" />

    <ImageView
        android:id="@+id/imgenglish"
        android:layout_width="104dp"
        android:layout_height="92dp"
        app:srcCompat="@drawable/英文"
        tools:layout_editor_absoluteX="306dp"
        tools:layout_editor_absoluteY="638dp" />

</android.support.constraint.ConstraintLayout>